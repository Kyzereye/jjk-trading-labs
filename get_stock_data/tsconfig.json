{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@backend/*": ["../backend/src/*"]
    }
  },
  "include": [
    "src/**/*",
    "../backend/src/services/trading-engine.service.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
